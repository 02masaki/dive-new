<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'session-main' do |f| %>

<div class='login-wrap'>
  <h1 class='login-name'>ログイン</h1>
  <div class='login-groups'>
    <%= render 'devise/shared/error_messages', model: f.object %>
    <div class="login-group">
      <div class='login-text-wrap'>
        <label class="login-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"login-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="login-group">
      <div class='login-text-wrap'>
        <label class="login-text">パスワード</label>
      </div>
      <%= f.password_field :password, class:"login-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='login-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="login-actions">
      <%= f.submit "ログイン",class:"login-red-btn" %>
    </div>
  </div>
</div>

<% end %>

<%= render "shared/second-footer"%>